<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_white"
    android:id="@+id/service_cl">

    <TextView
        android:id="@+id/script1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spec1"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/spec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:visibility="gone"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/script1"
        app:layout_constraintBottom_toTopOf="@id/script2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/script2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/spec1"
        app:layout_constraintBottom_toTopOf="@id/spec2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/spec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:visibility="gone"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/script2"
        app:layout_constraintBottom_toTopOf="@id/script3"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/script3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/spec2"
        app:layout_constraintBottom_toTopOf="@id/spec3"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/spec3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:visibility="gone"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/script3"
        app:layout_constraintBottom_toTopOf="@id/script4"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/script4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/spec3"
        app:layout_constraintBottom_toTopOf="@id/spec4"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/spec4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:visibility="gone"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/script4"
        app:layout_constraintBottom_toTopOf="@id/script5"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/script5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/spec4"
        app:layout_constraintBottom_toTopOf="@id/spec5"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/spec5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:visibility="gone"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/script5"
        app:layout_constraintBottom_toTopOf="@id/search_button"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ProgressBar
        android:id="@+id/event_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/spec5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/move_button"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 읽기"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/event_loading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/move_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/move_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="끌어서 이동"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/event_loading"
        app:layout_constraintLeft_toRightOf="@id/search_button"
        app:layout_constraintRight_toLeftOf="@+id/return_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더블탭 복귀"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/event_loading"
        app:layout_constraintLeft_toRightOf="@id/move_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>